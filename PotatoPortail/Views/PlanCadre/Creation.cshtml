@model PotatoPortail.Models.PlanCadre
@{
    ViewBag.Title = "Création du plan cadre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
@using (Html.BeginForm())
{
    <div id="formChoix" class="container">
        <div class="form-box">
            <h2>@ViewBag.Title</h2>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.TitreCours)
                @Html.EditorFor(model => model.TitreCours, new {htmlAttributes = new {@class = "form-control medium", @name = "titreCours"}})
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NumeroCours)
                @Html.EditorFor(model => model.NumeroCours, new {htmlAttributes = new {@class = "form-control medium", @name = "numeroCours"}})
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NbHeureDevoir)
                @Html.EditorFor(model => model.NbHeureDevoir, new {htmlAttributes = new {@class = "form-control small", @name = "nbHeureDevoir"}})
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NbHeurePratique)
                @Html.EditorFor(model => model.NbHeurePratique, new {htmlAttributes = new {@class = "form-control small", @name = "nbHeurePratique"}})
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.NbHeureTheorie)
                @Html.EditorFor(model => model.NbHeureTheorie, new {htmlAttributes = new {@class = "form-control small", @name = "nbHeureTheorie"}})
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IndicationPedago)
                @Html.EditorFor(model => model.IndicationPedago, new {htmlAttributes = new {@class = "form-control", @name = "indicationPedago"}})
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IdType, "Type")
                @Html.DropDownListFor(m => m.IdType, (IEnumerable<SelectListItem>)ViewBag.Types, htmlAttributes: new {@class = "form-control", @name = "codeCompetence"})
                @Html.ValidationMessageFor(model => model.IdType, "", new {@class = "text-danger"})
            </div>

            <button id="submitBtn" type="submit" class="fancy-button" UseSubmitBehavior="false">Créer</button>
        </div>
    </div>
}

@section Scripts {
    <script src="@Url.Content("~/Scripts/planCadreEnonceSelect.js")"></script>
    @Scripts.Render("~/bundles/jqueryval")
}